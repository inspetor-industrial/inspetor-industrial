model BoilerReportAttachment {
  id                String                          @id @default(cuid())
  documentId        String
  fieldName         BoilerReportAttachmentFieldName
  sortOrder         Int?
  createdAt         DateTime                        @default(now())
  updatedAt         DateTime                        @updatedAt
  injectorGaugeId   String?
  document          Documents                       @relation(fields: [documentId], references: [id], onDelete: Cascade)
  injectorGauge     InjectorGauge?                  @relation(fields: [injectorGaugeId], references: [id])
  operator          Operator?
  structureBodyInfo StructureBodyInfo?
  structureTubeInfo StructureTubeInfo?

  @@index([documentId])
  @@index([injectorGaugeId, fieldName])
}
