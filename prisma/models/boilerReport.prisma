model BoilerReport {
  id                     String                  @id @default(cuid())
  type                   BoilerReportType
  clientId               String
  companyId              String
  motivation             String?
  date                   DateTime?
  startTimeOfInspection  String?
  endTimeOfInspection    String?
  inspectionValidation   String?
  nextInspectionDate     DateTime?
  engineerId             String
  createdAt              DateTime                @default(now()) @map("created_at")
  updatedAt              DateTime                @updatedAt @map("updated_at")
  boilerInfo             BoilerInfo?
  client                 Clients                 @relation(fields: [clientId], references: [id])
  company                Company                 @relation(fields: [companyId], references: [id])
  engineer               User                    @relation(fields: [engineerId], references: [id])
  externalPerformedTests ExternalPerformedTests?
  generalPerformedTests  GeneralPerformedTests?
  injectorGauge          InjectorGauge?
  operator               Operator?
  powerSupply            PowerSupply?
  structureBodyInfo      StructureBodyInfo?
  structureFurnaceInfo   StructureFurnaceInfo?
  structureMirrorInfo    StructureMirrorInfo?
  structureTubeInfo      StructureTubeInfo?
  internalPerformedTests  InternalPerformedTests?
  localInstallationPerformedTests LocalInstallationPerformedTests?
  electronicPanel ElectronicPanel?
  dischargeSystem DischargeSystem?
}
